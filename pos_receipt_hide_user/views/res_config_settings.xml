<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_receipt_hide_user_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.receipt.hide.user.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='pos_interface_section']"
                position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div>
                            <label string="Hide User Options" for="hide_user_option" />
                            <div class="content-group mt16">
                                <field name="hide_user_option" colspan="4" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>